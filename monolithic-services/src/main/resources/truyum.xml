<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
               http://www.springframework.org/schema/context 
  				 http://www.springframework.org/schema/context/spring-context-2.5.xsd">
	<context:annotation-config />
	<bean id="menuItemone" class="com.cognizant.truyum.model.MenuItem">
		<property name="id" value="1"></property>
		<property name="name" value="Sandwich"></property>
		<property name="price" value="99"></property>
		<property name="active" value="true"></property>
		<property name="dateOfLaunch" value="15/03/2017"></property>
		<property name="category" value="Main Course"></property>
		<property name="freeDelivery" value="true"></property>
		<property name="imageLink"
			value="https://images.unsplash.com/photo-1528735602780-2552fd46c7af?ixlib=rb-1.2.1"></property>
	</bean>
	<bean id="menuItemtwo" class="com.cognizant.truyum.model.MenuItem">
		<property name="id" value="2"></property>
		<property name="name" value="Burger"></property>
		<property name="price" value="129"></property>
		<property name="active" value="true"></property>
		<property name="dateOfLaunch" value="23/12/2017"></property>
		<property name="category" value="Main Course"></property>
		<property name="freeDelivery" value="false"></property>
		<property name="imageLink"
			value="https://images.unsplash.com/photo-1512152272829-e3139592d56f?ixlib=rb-1.2.1"></property>
	</bean>
	<bean id="menuItemthree" class="com.cognizant.truyum.model.MenuItem">
		<property name="id" value="3"></property>
		<property name="name" value="Pizza"></property>
		<property name="price" value="149"></property>
		<property name="active" value="true"></property>
		<property name="dateOfLaunch" value="21/08/2017"></property>
		<property name="category" value="Main Course"></property>
		<property name="freeDelivery" value="false"></property>
		<property name="imageLink"
			value="https://images.unsplash.com/photo-1534308983496-4fabb1a015ee?ixlib=rb-1.2.1"></property>
	</bean>
	<bean id="menuItemfour" class="com.cognizant.truyum.model.MenuItem">
		<property name="id" value="4"></property>
		<property name="name" value="French Fries"></property>
		<property name="price" value="57"></property>
		<property name="active" value="false"></property>
		<property name="dateOfLaunch" value="02/07/2017"></property>
		<property name="category" value="Starter"></property>
		<property name="freeDelivery" value="true"></property>
		<property name="imageLink"
			value="https://images.unsplash.com/photo-1526230427044-d092040d48dc"></property>
	</bean>
	<bean id="menuItemfive" class="com.cognizant.truyum.model.MenuItem">
		<property name="id" value="5"></property>
		<property name="name" value="Chocolate Brownie"></property>
		<property name="price" value="32"></property>
		<property name="active" value="true"></property>
		<property name="dateOfLaunch" value="02/11/2022"></property>
		<property name="category" value="Dessert"></property>
		<property name="freeDelivery" value="false"></property>
		<property name="imageLink"
			value="https://images.unsplash.com/photo-1564355808539-22fda35bed7e?ixlib=rb-1.2.1"></property>
	</bean>
	<bean id="menuItemList" class="java.util.ArrayList">
		<constructor-arg>
			<list>
				<ref bean="menuItemone" />
				<ref bean="menuItemtwo" />
				<ref bean="menuItemthree" />
				<ref bean="menuItemfour" />
				<ref bean="menuItemfive" />
			</list>
		</constructor-arg>
	</bean>
</beans>
